{
    "compileOnSave": false,
    "compilerOptions": {
        "declaration": true,
        "experimentalDecorators": false,
        "emitDecoratorMetadata": false,
        "target": "ES2018",
        "module": "CommonJS",
        "moduleResolution": "node",
        "outDir": "./dist",
        "sourceMap": true,
        "strict": true,
        "strictPropertyInitialization": false,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noImplicitReturns": false,
        "noFallthroughCasesInSwitch": true,
        "esModuleInterop": true,
        "importHelpers": false,
        "typeRoots": [
            "node_modules/@types"
        ],
        "lib": [
            "ES2022"
        ]
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
        "**/*.test.ts"
    ]
}