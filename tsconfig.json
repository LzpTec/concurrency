{
    "compileOnSave": false,
    "compilerOptions": {
        "declaration": true,
        "target": "ES2017",
        "module": "ES2020",
        "moduleResolution": "bundler",
        "outDir": "./dist",
        "sourceMap": true,
        "strict": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noFallthroughCasesInSwitch": true,
        "esModuleInterop": true,
        "importHelpers": false,
        "typeRoots": [
            "node_modules/@types"
        ],
        "lib": [
            "ES2022",
            "DOM"
        ]
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
        "**/*.test.ts"
    ]
}